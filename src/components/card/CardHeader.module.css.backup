/* Stijlen specifiek voor de Card Header */

.headerContent {
  display: flex;
  align-items: flex-end;
  margin-top: 20px;
  position: relative;
  padding-left: 24px;
  margin-bottom: 20px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.name {
  margin: 0 0 2px 0;
  font-size: 20px;
  font-weight: bold;
  color: #1f2937;
}

.headline {
  margin: 0;
  color: #4b5563;
  font-size: 14px;
}

@media (max-width: 600px) {
  .headerContent {
    padding-left: 16px;
    max-width: 100%;
  }
}
